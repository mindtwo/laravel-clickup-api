root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
max_line_length = 120
trim_trailing_whitespace = true

[*.md]
max_line_length = 80
trim_trailing_whitespace = false

[*{.json,.versionrc}]
insert_final_newline = false

[*{.php,.md,.Dockerfile,Dockerfile,.xml,composer.json,pint.json}]
indent_size = 4
